<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
<div class="mb-3">
    <nav class="navbar navbar-expand-lg navbar-light bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">EcoMarket</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">О нас</a>
                    </li>
                    {{#admin}}
                        <li class="nav-item">
                            <a class="nav-link" href="/user">Список Пользователей</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/addProd">Добавить продукты</a>
                        </li>
                    {{/admin}}
                </ul>
                {{#username}}
                    <span class="nav-item navbar-nav">
                        <a class="nav-link text-black-50 me-2" href="/personal">Личный кабинет</a>
                    </span>
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                        <button class="btn btn-dark" type="submit" >
                            Выйти
                        </button>
                    </form>
                {{/username}}
                {{^username}}
                    <span class="nav-item navbar-nav">
                    <a class="btn btn-dark" href="/personal">Войти в аккаунт</a>
                </span>
                {{/username}}
            </div>
        </div>
    </nav>
</div>
